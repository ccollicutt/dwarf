#!/usr/bin/python

import logging
import os
import sys

# Add ../ to the Python search path if ../dwarfclient/__init__.py exists
possible_topdir = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                                os.pardir, os.pardir))
if os.path.exists(os.path.join(possible_topdir, 'dwarf', '__init__.py')):
    sys.path.insert(0, possible_topdir)

from dwarf.api import auth
from dwarf.api import compute
from dwarf.api import database
from dwarf.api import images

from dwarf.common import config

from dwarf.compute import ec2metadata

CONF = config.CONFIG


if __name__ == '__main__':
    # Set up the logger
    _filename = CONF.dwarf_log
    _format = '%(asctime)s - %(levelname)s - %(name)s : %(message)s'
    logging.basicConfig(filename=_filename, format=_format,
                        level=logging.DEBUG)

    # Create the API server threads
    threads = [
        auth.AuthApiThread(35357),
        compute.ComputeApiThread(8774),
        database.DatabaseApiThread(8773),
        images.ImagesApiThread(9292),
        ec2metadata.Ec2MetadataThread(8888),
    ]

    # Start all threads
    for thread in threads:
        thread.start()

    # Wait for all threads to terminate. Should never happen.
    for thread in threads:
        thread.join()

